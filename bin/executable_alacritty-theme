#!/usr/bin/env bash
set -eufo pipefail

if [ $DARKMODE -eq 1 ]; then
        echo '
[colors.bright]
black = "0x3e4249"
blue = "0x6cb6eb"
cyan = "0x5dbbc1"
green = "0xa0c980"
magenta = "0xd38aea"
red = "0xec7279"
white = "0xc5cdd9"
yellow = "0xdeb974"

[colors.normal]
black = "0x3e4249"
blue = "0x6cb6eb"
cyan = "0x5dbbc1"
green = "0xa0c980"
magenta = "0xd38aea"
red = "0xec7279"
white = "0xc5cdd9"
yellow = "0xdeb974"

[colors.primary]
background = "0x2c2e34"
foreground = "0xc5cdd9"
' > ~/.config/alacritty/colors.toml

elif [ $DARKMODE -eq 0 ]; then
#light
        echo '
[colors.primary]
background = "0xfafafa"
foreground = "0x4b505b"
  

[colors.normal]
black = "0x4b505b"
red = "0xd05858"
green = "0x608e32"
yellow = "0xbe7e05"
blue = "0x5079be"
magenta = "0xb05ccc"
cyan = "0x3a8b84"
white = "0xfafafa"
 

[colors.bright]
black = "0x4b505b"
red = "0xd05858"
green = "0x608e32"
yellow = "0xbe7e05"
blue = "0x5079be"
magenta = "0xb05ccc"
cyan = "0x3a8b84"
white = "0xfafafa"


' > ~/.config/alacritty/colors.toml


fi
