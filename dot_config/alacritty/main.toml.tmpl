live_config_reload = true

[colors.bright]
black = "0x3e4249"
blue = "0x6cb6eb"
cyan = "0x5dbbc1"
green = "0xa0c980"
magenta = "0xd38aea"
red = "0xec7279"
white = "0xc5cdd9"
yellow = "0xdeb974"

[colors.normal]
black = "0x3e4249"
blue = "0x6cb6eb"
cyan = "0x5dbbc1"
green = "0xa0c980"
magenta = "0xd38aea"
red = "0xec7279"
white = "0xc5cdd9"
yellow = "0xdeb974"

[colors.primary]
background = "0x2c2e34"
foreground = "0xc5cdd9"

[font]
size = 12

[font.bold]
family = "UbuntuMono Nerd Font"
style = "Bold"

[font.glyph_offset]
y = 2

[font.italic]
family = "UbuntuMono Nerd Font"
style = "Italic"

[font.normal]
family = "UbuntuMono Nerd Font"
style = "Regular"

[font.offset]
y = 4

[[keyboard.bindings]]
chars = "{"
key = 26
mods = "Alt"

[[keyboard.bindings]]
chars = "}"
key = 29
mods = "Alt"

[[keyboard.bindings]]
chars = "@"
key = 12
mods = "Alt"

[[keyboard.bindings]]
chars = '\'
key = 27
mods = "Alt"

[[keyboard.bindings]]
chars = "|"
key = 50
mods = "Alt"

[[keyboard.bindings]]
chars = "~"
key = 30
mods = "Alt"

[[keyboard.bindings]]
chars = "["
key = 28
mods = "Alt"

[[keyboard.bindings]]
chars = "]"
key = 25
mods = "Alt"

[selection]
save_to_clipboard = true
semantic_escape_chars = ",â”‚`|:\"' ()[]{}<>"

[shell]
args = ["-u", "new-session", "-A", "-s", "main"]
{{ if (eq .chezmoi.os "darwin") }}
program = "/opt/homebrew/bin/tmux"
{{ else if (eq .chezmoi.os "linux" ) }}
program = "tmux"
{{- end }}

[window]
dynamic_padding = true
{{ if (eq .chezmoi.os "darwin") }}
decorations = "buttonless"
{{ else if (eq .chezmoi.os "linux" ) }}
decorations = "None"
{{- end }}

[window.padding]
x = 8
y = 4
