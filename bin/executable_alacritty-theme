#!/usr/bin/env bash
set -eufo pipefail

if [ $DARKMODE -eq 1 ]; then
        echo '
colors:
  primary:
    background: "0x2c2e34"
    foreground: "0xc5cdd9"

  normal:
    black: "0x3e4249"
    red: "0xec7279"
    green: "0xa0c980"
    yellow: "0xdeb974"
    blue: "0x6cb6eb"
    magenta: "0xd38aea"
    cyan: "0x5dbbc1"
    white: "0xc5cdd9"

  bright:
    black: "0x3e4249"
    red: "0xec7279"
    green: "0xa0c980"
    yellow: "0xdeb974"
    blue: "0x6cb6eb"
    magenta: "0xd38aea"
    cyan: "0x5dbbc1"
    white: "0xc5cdd9"
' > ~/.config/alacritty/colors.yml

elif [ $DARKMODE -eq 0 ]; then
#light
        echo '
colors:
  primary:
    background: "0xfafafa"
    foreground: "0x4b505b"
  
  normal:
    black: "0x4b505b"
    red: "0xd05858"
    green: "0x608e32"
    yellow: "0xbe7e05"
    blue: "0x5079be"
    magenta: "0xb05ccc"
    cyan: "0x3a8b84"
    white: "0xfafafa"
 
  bright:
    black: "0x4b505b"
    red: "0xd05858"
    green: "0x608e32"
    yellow: "0xbe7e05"
    blue: "0x5079be"
    magenta: "0xb05ccc"
    cyan: "0x3a8b84"
    white: "0xfafafa"


' > ~/.config/alacritty/colors.yml


fi
